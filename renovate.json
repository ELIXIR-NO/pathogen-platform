{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "all minor dependencies",
      "groupSlug": "all-minor",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "extends": [
        "monorepo:nextjs"
      ],
      "groupName": "nextjs monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}